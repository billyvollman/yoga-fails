    <div>logged in as <%= current_user.username %>

    <a href="/my_fails">your Yoga Fails</a>

    <form class="logoutForm" action="/sessions" method="post">
      <input type="hidden" name="_method" value="delete">
      <button>logout</button>
    </form>
    </div>

  <a class="newPostLink" href="/fails/new">post new Yoga Fail</a>

  <% else %>

    <div><a href="/login">Login</a> or <a href="/createaccount">create an account</a></div>

  <% end %>

    <div><a href="/">Home</a></div>

    <div><a href="/stopfailing">Stop failing</a></div>
    </nav>
 </div>
